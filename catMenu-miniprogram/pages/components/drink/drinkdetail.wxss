/* pages/components/drink/drinkdetail.wxss */
.chooseMenu {
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #a9a9a9;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  text-align: center;
  line-height: 100rpx;
}

.menu {
  border-bottom: 4px solid #95d6bf;
  font-weight: bold;
}

.detail {
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.detailLeft {
	width: 24%;
	height: 1200rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
}

.leftContent {
	width: 100%;
	height: 175rpx;
}

.leftContent image {
	margin: 30rpx auto 10rpx auto;
	width: 35rpx;
	height: 40rpx;
	display: block;
	transform: translateY(10rpx);
}

.leftImage {
	width: 40rpx !important;
}

.leftMsg {
	display: inline-block;
	width: 100%;
	height: 30rpx;
	font-size: 12px;
	text-align: center; 	
	line-height: 30rpx;
	transform: translateY(20rpx);
}

.leftContentActive {
	color: #3fdcd2;
	background-color: #fff;
}

/* .detailMore {
	width: 3%;
	height: 968rpx;
	background-color: #fff;
} */

.detailRight {
	width: 76%;
	display: flex;
	flex-direction: column;
	border-left: 8px solid #fff;
}

.rightTea {
	height: 160rpx !important;
	transform: translateY(30rpx) !important;
}

.milkTeas {
	margin: 0 0 1px 0;
	width: 100%;
	height: 240rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	background-color: #fff;
}

.teaPhoto,.teaContent,.teaChoose {
	height: 100%;
}

.teaPhoto {
  flex: 1;
  text-align: center;
}

.teaChoose {
  flex: 1.2;
  text-align: center;
}

.teaContent {
	flex: 1.8;
	transform: translateX(5px);
	margin: 60rpx 0 0 0;
}

.teaPhoto image {
	width: 160rpx;
	height: 200rpx;
  transform: translateY(20rpx);
}

.teaName {
	font-size: 16px;
	margin: 0 0 0 10px;
}

.price {
	font-weight: bold;
	margin: 10px 0 4px 10px;
}

.priceBefore {
	font-weight: normal;
	font-size: 10px;
	text-decoration:line-through;
	color: #cccccc;
	padding: 5px 0 0 5px;
}

.priceDecline {
	display: inline;
	margin: 0 0 0 10px;
	font-size: 10px;
	border: 1px solid #fe3a39;
	border-radius: 6px;
	color: #fe3a39;
	font-weight: 600;
}

.chooseSize {
	margin: 0 auto;
	width: 80%;
	height: 60rpx;
	text-align: center;
	line-height: 60rpx;
	border-radius: 50rpx;
	background-color: #95d6bf;
	transform: translate(0rpx,120rpx);
	color: #f5faf8;
	font-size: 14px;
}

.thing {
  font-size: 12px;
  color: #a9a9a9;
}

.moreThing {
  margin: 20rpx auto;
  width: 90%;
  height: 120rpx;
}

.thingContent {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

.content {
  /* flex: 1; */
  width: 200rpx;
  height: 80%;
  line-height: 68rpx;
  text-align: center;
  font-size: 13px;
  border: 1px solid #e6e6e6;
  transform: translateY(12rpx);
}

.add {
  width: 35rpx;
  height: 35rpx;
  vertical-align: text-bottom;
}

.sContent {
  color: #e40011;
  border: 1px solid #e40011;
}

.final {
  margin: 40rpx auto;
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
}

.cart {
  float: right;
  width: 200rpx;
  text-align: center;
  background-color:#e60011;
  border-radius: 20rpx;
  color: #fff;
}