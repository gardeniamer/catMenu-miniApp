  height: 1800rpx;
}

.push {
  width: 100%;
  height: 40rpx;
}

.userLocation {
  margin: 0 auto 40rpx auto;
  width: 90%;
  height: 250rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.top {
  margin: 0 auto;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
}

.bottom {
  margin:  0 auto;
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  white-space: nowrap;
  font-size: 14px;
}

.edit {
  margin: 0 auto;
  width: 90%;
  height: 70rpx;
}

.locationMore {
  margin: 0 auto;
  width: 95%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
