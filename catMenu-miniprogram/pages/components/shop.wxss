/* pages/components/shop.wxss */
.community {
  background: rgba(222,236,221, .6) url("https://img.js.design/assets/img/6492802168dc0b2f0b46c5d3.png#07b1d618aee2537c07025350fc003283");
	background-repeat: no-repeat;
  background-size: 100%;
}

.drinkSearch {
	width: 660rpx;
	height: 100rpx;
	margin: 10px auto 5px auto;
	background-color: #fff;
	border-radius: 50rpx;
}
.search {
	float: right;
	width: 96rpx;
	height: 96rpx;
	-webkit-transform: translate(-3rpx,2rpx);
	        transform: translate(-3rpx,2rpx);
}
.searchInput {
	display: inline-block;
	width: 500rpx;
	height: 100rpx;
	-webkit-transform: translateX(20px);
	        transform: translateX(20px);
	font-size: 20px;
}

.navBarInfo {
	width: 60rpx;
	height: 55rpx;
	transform: translate(100rpx,16rpx);
}	
	
.navWord {
	width: 100%;
	height: 100%;
  font-size: 16px;
  font-weight: bold;
	text-align: center;
	line-height: 48px;
}

.push {
  width: 100%;
  height: 55rpx;
}

.shopImg {
  width: 100%;
  height: 100%;
}

.banner {
  margin: 0 auto;
  width: 700rpx;
  height: 280rpx;
  border-radius: 20rpx;
  background-color: #fff;
}

.shopImg {
  border-radius: 10rpx;
  margin: 0 2rpx 0 2rpx;
}